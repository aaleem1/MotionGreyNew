<script type="text/javascript">
$(function() {
  	var header = $('#sticky-tabs');
    var hieghtThreshold = $(".productTabs").offset().top;
    $(window).scroll(function() {
        var scroll = $(window).scrollTop();

        if (scroll >= hieghtThreshold ) {
            header.addClass('showsubheader');
        } else {
            header.removeClass('showsubheader');
        }
    });
})
</script>