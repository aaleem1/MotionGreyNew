    $bundle_label_text : {{ settings.bundle_text }};
    $bundle_label_bg : {{ settings.bg_bundle }};
    $sold_out_text : {{ settings.text_sould_out }};
    $bg_sold_out : {{ settings.bg_sould_out }};
    
/*=====  End of mixin  ======*/


