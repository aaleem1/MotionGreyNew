<section class="featured-section">
    <div class="container">
      <div class="row">
          {% for block in section.blocks %}
          <div class="col-md-3 mb-20 shipping-blocks">
            {%- assign img_url = block.settings.icon | img_url: '600x'-%}
              {% if block.settings.icon != blank %}
              <img data-src="{{img_url}}" alt="{{img_url.alt}}" {% render 'lazyload' %} >
              {% else %}
              <div class="no-image" style="padding-top: 50%; font-size:20px"><span>110X110px</span></div>
              {% endif %}
              {% if block.settings.title != blank %}
                 <h4 class="text-white">{{ block.settings.title }}</h4>
              {% endif %}
          </div>
          {% endfor %}
      </div>
    </div>
</section>

{% schema %}
  {
    "name": "Express Shipping",
    "class": "pt-20 express-shipping",
    "max_blocks": 4,
    "settings": [
      {
        "type":"text",
        "id":"heading",
        "label":"Heading",
        "default":"Comfortable Solutions For Office"
